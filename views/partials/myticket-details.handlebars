<div class="container mytickets gx-5 gy-5">
   <div class="row row1 gx-5">
    <div class="col">
      Destination: <br> {{Flight.departingCity}} to {{Flight.arrivingCity}}
    </div>
    <div class="col">
      Name of Passenger: <br> {{Customer.firstName}}&nbsp;{{Customer.lastName}}
    </div>
    <div class="col">
      Departure Date: <br> {{Flight.departingDate}}
    </div>
    <div class="col-2">
      Purchase Date: <br> {{order_date}}
    </div>
  </div>
  <div class="row row2 gy-5">
    <div class="col">
      {{Flight.Airliner.name}}
    </div>
    <div class="col">
      {{Flight.takeOffTime}} - {{Flight.landingTime}}
    </div>
    <div class="col">
      {{Flight.price}}
    </div>
  </div>
  <div class="row gy-5">
    <div class="col">
      Has Baggage:  {{baggage}}
    </div>
    <div class="col">
      Round trip:  {{roundtrip}}
    </div>
    <a href="/api/ticket/cancel/{{id}}" class="col-2 cancel-flight">
      Cancel Flight
    </a>
    <a href="/api/ticket/download-itinerary/{{id}}" class="col-2 download-itinerary">
      Download Itinerary
    </a>
  </div>
 </div>