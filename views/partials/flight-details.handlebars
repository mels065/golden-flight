 <div class="container d-flex justify-content-center">
   <h2>Flights from <strong>{{departingCity}}</strong> to <strong>{{arrivingCity}}</strong></h2>
   </div>

<form class="container px-4">
  <div class="row results">
    <div class="col">
      {{Airliner.name}}
    </div>
    <div class="col">
      {{takeOffTime}} - {{landingTime}}
    </div>
    <div class="col">
      {{price}}
    </div>
    <a href="../../controllers/api/flight/{{id}}" class="col-2 book-flight">
      Book flight
    </a>
  </div>
 </form>
