<header class="header-results container-fluid d-flex justify-content-between">
  <div class="row gx-5">
    <div class="col-3 circular--portrait"><img
        class="home-plane"
        src="img/airplane.png"
        alt="airplane"
      /></div>
    <h1 class="col home-h1">Golden Flights</h1>
  </div>
  <a href="" class="toggle-button">
    <span class="bar"></span>
    <span class="bar"></span>
    <span class="bar"></span>
  </a>
  <div class="row m-3 d-flex align-items-center navbar-links">
    <a class="col text-nowrap my-tickets" href="/mytickets">My Tickets</a>
    <button class="col no-button" id="logout">logout</button>
  </div>

</header>
<div class="container d-flex flex-column navbar-links-dropdown">

  <a class="col-12 text-nowrap my-tickets-dropdown" href="/mytickets">My Tickets</a>
  <button class="col-12 no-button-dropdown" id="logout-dropdown">logout</button>
</div>
<div class="container d-flex justify-content-center">
  <h2>Welcome, <strong>{{firstName}}</strong>!</h2>
</div>
<div class="container d-flex justify-content-center">
  <h2>Where Would You Like To Go?</h2>
</div>
<form method="GET" action="/results" class="search-form">
  <div class="ui-widget">
    <label for="tags">Leaving from:</label>
    <input required class="departingField" id="tags" name="departingCity" />
  </div>
  <div class="ui-widget">
    <label for="tags">Going to:</label>
    <input required class="arrivingField" id="tags2" name="arrivingCity" />
  </div>
  <p class="departing">Departing:
    <input required type="text" id="datepicker" name="departingDate" /></p>
  <input id="searchBtn" type="submit" name="" value="Search" />
</form>

<script src="./js/search.js"></script>